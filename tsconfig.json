{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@app": ["./src/modules/app/index"],
      "@app/*": ["./src/modules/app/*"],
      "@redux": ["src/modules/app/redux/index"],
      "@redux/*": ["src/modules/app/redux/*"],
      "@core/*": ["./src/modules/core/*"],
      "@localization": ["./src/modules/localization/index"],
      "@localization/*": ["./src/modules/localization/*"],
      "@env": ["src/enviroment.ts"],
      "@router/*": ["src/modules/app/redux/router/*"],
      "@ui": ["src/modules/app/redux/ui/index"],
      "@ui/*": ["src/modules/app/redux/ui/*"],
      "@pages": ["./src/modules/pages/index"],
      "@pages/*": ["./src/modules/pages/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "@types"]
}
